@page "{resturantId:int}"
@model OdeToFood.Pages.Resturants.DeleteModel
@{
    ViewData["Title"] = "Delete Resturant";
}

<h1>Delete!</h1>
<div class="alert alert-danger">
    Are you sure you want to delete @Model.Resturant.Name?
</div>
<form method="post">
    <button type="submit" class="btn btn-danger mb-3">Yes!</button>
    <a asp-page="List" class="btn btn-secondary mb-3">Cancel</a>
</form>